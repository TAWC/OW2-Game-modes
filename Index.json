rule("Rule 1")
{
	event
	{
		Ongoing - Each Player;
		All;
		All;
	}

	conditions
	{
		Is Game In Progress == True;
		Is Assembling Heroes != True;
	}

	actions
	{
		Set Primary Fire Enabled(Event Player, False);
		Add Health Pool To Player(Event Player, Armor, 100, False, False);
		Set Max Ammo(Event Player, 1, 1);
		Set Reload Enabled(Event Player, False);
	}
}

rule("Rule 3")
{
	event
	{
		Ongoing - Global;
	}

	conditions
	{
		Is Assembling Heroes == True;
	}

	actions
	{
		Set Match Time(6);
	}
}

rule("Rule 2")
{
	event
	{
		Ongoing - Each Player;
		All;
		All;
	}

	conditions
	{
		Is Button Held(Event Player, Button(Primary Fire)) == True;
		Ammo(Event Player, 0) != 0;
	}

	actions
	{
		Set Ammo(Event Player, 0, Ammo(Event Player, 0) - 1);
		Create Projectile(Symmetra Photon Projector, Event Player, Eye Position(Event Player), Facing Direction Of(Event Player) + Vector(
			0, 0.250, 0), To World, Damage, Opposite Team Of(Team Of(Event Player)), 500, 1, 0, Bad Explosion, Explosion Sound, 0.100, 40,
			5, 0, 3, 40);
		If(Is Using Ultimate(Event Player));
			Wait(0.150, Ignore Condition);
		Else;
			Wait(0.500, Ignore Condition);
		End;
		Loop If Condition Is True;
	}
}

rule("Rule 4")
{
	event
	{
		Ongoing - Each Player;
		All;
		All;
	}

	conditions
	{
		Is Alive(Event Player) == True;
	}

	actions
	{
		Teleport(Event Player, Position Of(Event Player) + Vector(0, 2, 0));
	}
}
